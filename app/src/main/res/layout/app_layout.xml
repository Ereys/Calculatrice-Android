<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/root">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablelayout01"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/screen_calcul"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:text="hello world"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/screen"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:text="hello world"/>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_M"
                android:text="M" />
            <Button android:id="@+id/bt_CM"
                android:text="CM"/>
            <Button android:id="@+id/bt_C"
                android:text="C"/>
            <Button android:id="@+id/bt_return"
                android:text="return"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_invert"
                android:text="1/x" />
            <Button android:id="@+id/bt_pow"
                android:text="x^2"/>
            <Button android:id="@+id/bt_sqrt"
                android:text="2âˆšx"/>
            <Button android:id="@+id/bt_divide"
                android:text="/" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_7"
                android:text="7" />
            <Button android:id="@+id/bt_8"
                android:text="8"/>
            <Button android:id="@+id/bt_9"
                android:text="9"/>
            <Button android:id="@+id/bt_mult"
                android:text="x"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_4"
                android:text="4" />
            <Button android:id="@+id/bt_5"
                android:text="5"/>
            <Button android:id="@+id/bt_6"
                android:text="6"/>
            <Button android:id="@+id/bt_sub"
                android:text="-"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_1"
                android:text="1" />
            <Button android:id="@+id/bt_2"
                android:text="2"/>
            <Button android:id="@+id/bt_3"
                android:text="3"/>
            <Button android:id="@+id/bt_add"
                android:text="+"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:id="@+id/bt_switch"
                android:text="+/-" />
            <Button android:id="@+id/bt_0"
                android:text="0"/>
            <Button android:id="@+id/bt_dot"
                android:text="."/>
            <Button android:id="@+id/bt_egal"
                android:text="="
                android:background="@color/black"/>
        </TableRow>
    </TableLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:textColor="@color/black"
        />
</LinearLayout>